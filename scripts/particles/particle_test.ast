//----------------------------------------------------------
//				Generic smoke particle system
//----------------------------------------------------------

//Most values are randomized between the minimum and maximum parameters.
//Min = max means no randomization.

//Generic parameters
"name"								"smoke_01_p"			//Particle system name
"sprite_name"						"smoke_01"				//Sprite to use. Needs to be loaded by asset file

//Emission parameters
"emission_type"						"1"						//Not implemented yet.	1 = continuous, 2 = instant
"emission_rate"						"500"					//Particles per second
"emission_max"						"10"					//Not implemented yet.	Particles to emit if type = 2
"emission_force_min"				"180"						//Emission force minimum
"emission_force_max"				"300"						//Emission force maximum
"emission_friction_min"				"0.99"					//Emission friction minimum. Closer to 1 = less friction
"emission_friction_max"				"0.99"					//Emission friction maximum. Closer to 1 = less friction
"emission_angle_min"				"-180"					//Emission angle minimum
"emission_angle_max"				"180"					//Emission angle maximum

//Lifespan parameters
"lifespan_min"						"4"						//Lifespan duration minimum
"lifespan_max"						"4"						//Lifespan duration maximum

//Size parameters
"size_min"							"0.3"					//Scale minimum
"size_max"							"0.4"					//Scale maximum
"size_ratio"						"0.5"					//x/y ratio. 1 = normal

//Rotation parameters
"rotation_rate_min"					"0"						//Rotation rate minimum
"rotation_rate_max"					"0"						//Rotation rate maximum
"rotation_random"					"1"						//Particles spawn with random rotation. Is overridden by rotation alignment
"rotation_align"					"1"						//Align rotation to emission angle. Use rotation parameter to adjust. Overrides random rotation
"rotation"							"0"						//If not random, then this

//Fade parameters
"fade_in_min"						"2"						//Fade in duration minimum
"fade_in_max"						"2"						//Fade in duration maximum
"fade_out_min"						"2"						//Fade out duration minimum
"fade_out_max"						"2"						//Fade out duration maximum

//Mod parameters

"internal_oscillation"				"0"						//Controls how parameter values oscillate. 1 = particles use their internal clock, 0 = particles use particle system's global clock.

//Emission angle modification parameters
"emission_angle_mod_oscillate_freq_min"			"2"						//Oscillatoion frequency min. Oscillator turns this many times in one second. 0 = no oscillation
"emission_angle_mod_oscillate_freq_max"			"2"						//Oscillatoion frequency max. Oscillator turns this many times in one second. 0 = no oscillation
"emission_angle_mod_oscillate_amplitude_min"	"120"					//Oscillation amplitude minimum. 1 means oscillation between -1 and 1
"emission_angle_mod_oscillate_amplitude_max"	"120"					//Oscillation amplitude maximum. 1 means oscillation between -1 and 1
"emission_angle_mod_oscillate_offset"			"0"						//Offset oscillation timer. Has little effect except in special cases

//Force modification parameters
"force_mod_oscillate_freq_min"		"2"						//Oscillatoion frequency min. Oscillator turns this many times in one second. 0 = no oscillation
"force_mod_oscillate_freq_max"		"2"						//Oscillatoion frequency max. Oscillator turns this many times in one second. 0 = no oscillation
"force_mod_oscillate_amplitude_min"	"120"					//Oscillation amplitude minimum. 1 means oscillation between -1 and 1
"force_mod_oscillate_amplitude_max"	"120"					//Oscillation amplitude maximum. 1 means oscillation between -1 and 1
"force_mod_oscillate_offset"		"0"						//Offset oscillation amplitude.

//Size modification parameters
"size_mod_scalar_rate_min"				"1"						//Size modification minimum (scalar). After 1s the sprite will be of this size compared to 1s ago.
"size_mod_scalar_rate_max"				"1"						//Size modification maximum (scalar). After 1s the sprite will be of this size compared to 1s ago.

"size_mod_oscillate_freq_min"			"0"						//Oscillatoion frequency min. Oscillator turns this many times in one second. 0 = no oscillation
"size_mod_oscillate_freq_max"			"25"						//Oscillatoion frequency max. Oscillator turns this many times in one second. 0 = no oscillation
"size_mod_oscillate_amplitude_min"		"0.4"					//Oscillation amplitude minimum. 1 means oscillation between -1 and 1
"size_mod_oscillate_amplitude_max"		"0.4"					//Oscillation amplitude maximum. 1 means oscillation between -1 and 1
"size_mod_oscillate_amplitude_offset"	"1"						//Offset oscillation amplitude.

//Movement modification parameters
"move_mod_angle_min"				"50"					//Movement mod angle minimum. Particle turns this many degrees in one second
"move_mod_angle_max"				"50"					//Movement mod angle maximum. Particle turns this many degrees in one second
"move_mod_oscillate_freq"			"2"						//Not implemented yet
"move_mod_oscillate_amplitude"		"1"						//Not implemented yet
"move_mod_oscillate_offset"			"0"						//Not implemented yet

//Alpha modification parameters
"alpha_min"							"255"					//Minimum alpha value
"alpha_max"							"255"					//Maximum alpha value
"alpha_mod_oscillate_freq"			"2"						//Not implemented yet
"alpha_mod_oscillate_amplitude"		"120"					//Not implemented yet
"alpha_mod_oscillate_offset"		"120"					//Not implemented yet
