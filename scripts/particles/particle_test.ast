//Generic parameters
"name"								"smoke_01_p"			//Particle system name
"sprite_name"						"smoke_01"				//Sprite to use. Needs to be loaded by asset file

//Emission stuff
"emission_type"						"1"						//1 = continuous, 2 = instant
"emission_rate"						"50"					//Particles per second
"emission_max"						"10"					//Particles to emit if type = 2
"emission_force_min"				"0.5"					//Emission force minimum
"emission_force_max"				"3"						//Emission force maximum
"emission_friction"					"0.9"
"emission_angle_min"				"0"						//Emission angle minimum
"emission_angle_max"				"360"					//Emission angle maximum

//Lifespan stuff
"lifespan_min"						"4"						//Lifespan duration minimum
"lifespan_max"						"4"						//Lifespan duration maximum

//Size and stuff
"size_min"							"0.5"					//Scale minimum
"size_max"							"2"						//Scale maximum

//Rotation parameters
"rotation_rate_min"					"-5"					//Rotation rate minimum
"rotation_rate_max"					"5"						//Rotation rate maximum
"rotation_random"					"1"						//Particles spawn with random rotation
"rotation"							"0"						//If not random, then this

//Fade thingies
