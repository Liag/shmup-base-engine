"fade_in_max"						"2"						//Fade in duration maximum
"fade_out_min"						"2"						//Fade out duration minimum
"fade_out_max"						"2"						//Fade out duration maximum

//Size modification
"size_mod_scalar_rate"				"0"
"size_mod_oscillate_freq"			"2"
"size_mod_oscillate_amplitude"		"120"
"size_mod_oscillate_offset"			"120"

//Alpha modification
"alpha_min"							"255"
"alpha_max"							"255"
"alpha_mod_scalar_rate"				"-0.1"
"alpha_mod_oscillate_freq"			"2"
