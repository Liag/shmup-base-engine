//----------------------------------------------------------
//						Generic shield
//----------------------------------------------------------

//Most values are randomized between the minimum and maximum parameters.
//Min = max means no randomization.

//Generic parameters
"name"								"shield_01_p"			//Particle system name
"sprite_name"						"particle_2"			//Sprite to use. Needs to be loaded by asset file
"move_type"							"0"						//Should particles move with particle system?
"speed_multiplier"					"1"						//Not implemented yet. Multiply emission rate with speed, allowing for trails and stuff without clustered particle systems

//Color parameters
"initial_color_r"					"255"
"initial_color_g"					"100"
"initial_color_b"					"200"

"modified_color_r"					"255"					
"modified_color_g"					"250"					
"modified_color_b"					"255"

//Emission parameters
"emission_type"						"1"						//1 = continuous, 2 = instant
"emission_rate"						"500"					//Particles per second
"emission_max"						"10"					//Particles to emit if type = 2
"emission_force_min"				"00"						//Emission force minimum
"emission_force_max"				"100"					//Emission force maximum
"emission_friction_min"				"0.99"					//Emission friction minimum. Closer to 1 = less friction
"emission_friction_max"				"0.99"					//Emission friction maximum. Closer to 1 = less friction
"emission_angle_min"				"-0"					//Emission angle minimum
"emission_angle_max"				"360"					//Emission angle maximum

//Lifespan parameters
"lifespan_min"						"1.1"					//Lifespan duration minimum
"lifespan_max"						"2"					//Lifespan duration maximum

//Size parameters
"size_min"							"0.1"					//Scale minimum
"size_max"							"0.1"					//Scale maximum
"size_ratio"						"1"						//x/y ratio. 1 = normal

//Rotation parameters
"rotation_rate_min"					"-10"					//Rotation rate minimum
"rotation_rate_max"					"10"						//Rotation rate maximum
"rotation_random"					"1"						//Particles spawn with random rotation. Is overridden by rotation alignment
"rotation_align"					"1"						//Align rotation to emission angle. Use rotation parameter to adjust. Overrides random rotation
"rotation"							"90"						//If not random, then this

"size_mod_scalar_rate_min"				"1.1"						//Size modification minimum (scalar). After 1s the sprite will be of this size compared to 1s ago.
"size_mod_scalar_rate_max"				"1.1"						//Size modification maximum (scalar). After 1s the sprite will be of this size compared to 1s ago.

//Fade parameters
"fade_in_min"						"0.1"
"fade_in_max"						"0.1"
"fade_out_min"						"1"
"fade_out_max"						"1"

"move_mod_angle_min"	"-200"				
"move_mod_angle_max"	"200"

//Alpha modification parameters
"alpha_min"	"255"
"alpha_max"	"255"